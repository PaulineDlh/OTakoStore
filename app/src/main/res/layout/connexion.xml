<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="80dp"
        android:src="@drawable/logo_poulpe"/>

    <TextView
        android:id="@+id/activity_main_bienvenue_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Bonjour et bienvenue sur O'Tako Store !"/>

    <EditText
        android:id="@+id/activity_main_nom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Votre identifiant"/>

    <Button
        android:id="@+id/activity_main_identifier_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:text="S'identifier"/>

</LinearLayout>

